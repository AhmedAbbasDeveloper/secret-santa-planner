<%- include("partials/header") -%>

<!-- Title -->
<section class="colored-section" id="title">
  <div class="container-fluid">

    <div class="row vertically-center">
      <div class="col-lg-6">
        <h1 class="big-heading">Hold your own Secret Santa game</h1>
        <button class="download-button btn btn-lg btn-light" type="button"><a href="/new" class="apply-button">Create a New Group</a></button>
        <button class="download-button btn btn-lg btn-light" type="button"><a href="/existing" class="apply-button">View an Existing Group</a></button>
      </div>

      <div class="col-lg-6">
        <img class="title-image" src="images/logo.png">
      </div>
    </div>

  </div>
</section>

<!-- Instructions -->
<section class="white-section" id="instructions">
  <div class="container-fluid">

    <h2 class="section-heading">Instructions</h2>

    <div class="row">
      <div class="pricing-column col-lg-4 col-md-6">
        <div class="card">
          <div class="card-header colored-section">
            <h3>Step 1</h3>
          </div>
          <div class="card-body">
            <h2 class="price-text">Create Your Group</h2>
            <p>Create a group name</p>
            <p>Add a recommended budget</p>
            <p>Add all your friends as participants</p>
            <p>Share your the group code with all your friends</p>
          </div>
        </div>
      </div>

      <div class="pricing-column col-lg-4 col-md-6">
        <div class="card">
          <div class="card-header colored-section">
            <h3>Step 2</h3>
          </div>
          <div class="card-body">
            <h2 class="price-text">Enter Your Gift Selections</h2>
            <p>Enter your group code</p>
            <p>Select your name from the drop down</p>
            <p>Enter a list of some gifts you would like to receive</p>
          </div>
        </div>
      </div>

      <div class="pricing-column col-lg-4">
        <div class="card">
          <div class="card-header colored-section">
            <h3>Step 3</h3>
          </div>
          <div class="card-body">
            <h2 class="price-text">View your Giftee</h2>
            <p>Enter your group code</p>
            <p>Select your name from the drop down</p>
            <p>View your giftee and a list of gifts they would like to receive</p>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<%- include("partials/footer") -%>
